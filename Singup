    //method to insert values into admin table.
    public void insertSignupDetails() throws SQLException{
        String id = Admin_id.getText();
        String name = Ad_mail.getText();
        String pwd = A_password.getText();
        
        try{
            Connection con = DBConnection.getConnection();
            String sql = "insert into admin(Admin_id,Ad_mail,A_password) values(?,?,?)";
            PreparedStatement pst = con.prepareStatement(sql);
            
            pst.setString(1,id);
            pst.setString(2,name);
            pst.setString(3,pwd);
            
            int updatedRowCount = pst. executeUpdate();
            
            if (updatedRowCount > 0){
                JOptionPane.showMessageDialog(this,"Success");
            }else{
                JOptionPane.showMessageDialog(this,"Failure");
            }
            
        }catch(ClassNotFoundException e){
            e.printStackTrace();
        }catch(Exception e){
            e.printStackTrace();
        }
    }
